<%- include('../partials/header'); -%>

<ul class="recipes">
  <% if(notes.length==0){ %>
    <h2>No notes found</h2>
    <%} else { %>

    
    <% for(var i=0; i < notes.length; i++) { %>
      <a href='/notes/<%=notes[i]._id%>'>
        <li class="recipe">
          <h4><%=dates[i]%></h4>
          <p><%= notes[i].text %></p>
        </li>
      </a>
  <% } %>
 <% } %>

</ul>


